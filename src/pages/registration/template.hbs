<div class="registration-page">
    <div class="container registration-page__container">
        <form class="registration-page__form">
            <h1 class="h2 registration-page__form-title">Registration</h1>
            <div class="registration-page__form-fields">
                {{> field className="registration-page__form-field" label="First name" placeholder="Enter your firstname" name="first_name" }}
                {{> field className="registration-page__form-field" label="Second name" placeholder="Enter your second name" name="second_name" }}
                {{> field className="registration-page__form-field" label="Login" placeholder="Enter your login" name="login" }}
                {{> field className="registration-page__form-field" label="Email" placeholder="Enter your email" name="email" }}
                {{> field className="registration-page__form-field" label="Phone" placeholder="Enter your phone" name="phone" }}
                {{> field className="registration-page__form-field" label="Password" placeholder="Enter your password" name="password" }}
            </div>
            {{> button text="sign up" className="registration-page__form-button" }}
        </form>
    </div>
</div>