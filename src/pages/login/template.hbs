<div class="login-page">
    <div class="container login-page__container">
        <form class="login-page__form">
            <h2 class="h2 login-page__form-title">Login</h2>
            <div class="login-page__form-fields">
                {{> field label="Email" placeholder="Enter your email" class="login-page__form-field" name="email" }}
                {{> field label="Password" placeholder="Enter your password" class="login-page__form-field" name="password" }}
            </div>
            {{> button text="sign in" class="login-page__form-button" }}
        </form>
    </div>
</div>